<div class="box-form-dialog">
    <form novalidate="" id="form" action="{{path('localUpdate', {'id' : id})}}" method="post" class="cms ajaxFormTable formEscala endereco">
    <div class="myform">         
            {{ form_errors(form) }}
                    <div>
                        {{ form_errors(form.descricao)}}
                        {{ form_label(form.descricao)}}    
                        {{ form_widget(form.descricao)}}
                    </div>
            
                    <div>
                        {{ form_errors(form.cidade)}}
                        {{ form_label(form.cidade)}}    
                        {{ form_widget(form.cidade)}}
                    </div>

                    <div>
                        {{ form_errors(form.bairro)}}
                        {{ form_label(form.bairro)}}    
                        {{ form_widget(form.bairro)}}
                    </div>

                    <div>
                        {{ form_errors(form.rua)}}
                        {{ form_label(form.rua)}}    
                        {{ form_widget(form.rua)}}
                    </div>

                    <div>
                        {{ form_errors(form.numero)}}
                        {{ form_label(form.numero)}}    
                        {{ form_widget(form.numero)}}
                    </div>

                    <div>
                        {{ form_errors(form.complemento)}}
                        {{ form_label(form.complemento)}}    
                        {{ form_widget(form.complemento)}}
                    </div>
                
                    <div>
                        {{ form_errors(form.custo)}}
                        {{ form_label(form.custo)}}    
                        {{ form_widget(form.custo,{'attr' : { 'style' : 'width:20%','class':'moeda'}})}}
                    </div>     
    </div>                   
             {{ form_row(form._token) }} 
        <div class="box-submit">
            <input type="submit" value="Enviar"/>
            <input class="close" type="button" onclick="dialogClose()" value="Fechar"/>
        </div>
    </form>
</div>
        
