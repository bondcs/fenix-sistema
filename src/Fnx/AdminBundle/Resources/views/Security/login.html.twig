{% extends "FnxAdminBundle::layout.html.twig" %} 

{% block title %}Login{% endblock %}
{% block menu %}{% endblock %}

 
{% block conteudo %}
    <div id="wrapper-login">
        <div id="header-login">Fenix</div>
        <div id="box-login">
            {% if error %}
            <div class="error">{{ error.message|trans({},'validators') }}</div>
            {% endif %}                 
            <form action="{{ path('_security_check_a') }}" method="POST" class="cms">
            <div class="myform"> 
                <div>
                    <label for="username">Usu√°rio:</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" />
                </div>

                <div>
                    <label for="password">Senha:</label>
                    <input type="password" id="password" name="_password" />
                </div>
                    
                    <input style="margin-left:10%;" type="checkbox" id="remember_me" name="_remember_me" checked />
                <label for="remember_me">Relembre-se</label>
           <div class="myform">              
               <input style="margin-left:38%;" type="submit" name="login" value="Acessar" />
            </form>
        </div>
    </div>
{% endblock %}