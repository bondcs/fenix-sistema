{% extends "FnxAdminBundle::layout.html.twig" %}

{% block title %} Atividade {% endblock %}

{% block menuContent %}
    <div id="menuContent">
        <h3>Gerenciamento: Formulário de Atividade</h3>
        <ul>
            <li><a class="back-link" href="{{ path('atividadeHome')}}"><span></span>Voltar</a></li>
        </ul> 
    </div>
{% endblock %}

{% block conteudo %}

 <div class="ui-panel-content ui-widget-content " style="width:auto">
   <h4 class="ui-panel-title ui-widget-header ">Atividade</h4>
   <div id="box-form">
    <form novalidate="" class="cms" action="{{ path('atividadeCreate') }}" method="post" {{ form_enctype(form) }}>
    <div class="myform">     
        {{form_errors(form)}}
        
        <div class="inputExtendido">
            {{ form_errors(form.nome)}}
            {{ form_label(form.nome)}}    
            {{ form_widget(form.nome, {"id" : "nome"})}}
        </div>
          
        {#<div>
            {{ form_errors(form.descricao)}}
            {{ form_label(form.descricao)}}    
            {{ form_widget(form.descricao, {"id" : "descricao"})}}
        </div>
            {% ui_tooltip for="#descricao" label="Descrição para atividade. <br/>ex: Será instalado câmeras para <br/>monitoramento da empresa." %}#}
        <div class="complete">
            {{ form_errors(form.cliente)}}
            {{ form_label(form.cliente)}}
            {{ form_widget(form.cliente, {"id" : "cliente"})}} <a class="ajax-link button" href="{{ path("clienteAdd")}}" title="Cliente">Adicionar</a> 
        </div>
            
        <div>
            {{ form_errors(form.servico)}}
            {{ form_label(form.servico)}}    
            {{ form_widget(form.servico, {"id" : "servico"})}}
        </div>
    </div>
         
        {{ form_row(form._token) }}
        <input type="submit" value="Submit"/>
    </form>
 </div>
</div>
{% endblock %}

