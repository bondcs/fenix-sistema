      {% render 'FnxAdminBundle:Galeria:show' with {'id' : atividade.id} %}
    </div>
        
    <div id="tabs-4">
        <div class="box-form-ajax">
        {% if (atividade.enderecos is empty) %}
            {% render 'FnxAdminBundle:Endereco:new' with {'id' : atividade.id} %}    
        {% else %}
            {% render 'FnxAdminBundle:Endereco:edit' with {'id' : atividade.id} %}
        {% endif%}
        </div>

    </div>


</div>

