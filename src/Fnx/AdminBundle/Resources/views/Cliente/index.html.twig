{% extends 'FnxAdminBundle::layout.html.twig' %}
{% block title %} Cliente Manager {% endblock %}
{% block menuContent %}

    <div id="menuContent">
        <h3>Cliente Manager: Clientes</h3>
        <ul>
            <li><a class="new-link" href="{{ path('clienteAdd')}}"><span ></span>Novo</a></li>
            <li><a route="clienteEdit" class="edit-link" href="#"><span></span>Editar</a></li>
            <li><a route="clienteShow" class="show-link" href="#"><span></span>Profile</a></li>
            <li><a route="clienteRemove" class="delete-link confirm-link" href="#"><span></span>Deletar</a></li>
        </ul> 
    </div>

{% endblock %}

{% block conteudo %}
     
    <div class="box-table">
        <table id="table" class="tablePlugin">
            <thead>
                <tr>
                    <th class="left">Nome</th>
                    <th>Telefone</th>
                    <th>ID</th>
                </tr>
            </thead>
            <tbody>
        {% for cliente in clientes %}
                <tr{% if loop.index is even %} class="row0" {% else %} class="row1" {% endif %}>
                    <td><a class="link-name" href="{{ path('clienteEdit', {'id': cliente.id} )}}">{{ cliente.nome }}</a></td>
                    <td>{{ cliente.telefone }}</td>
                    <td class="id">{{ cliente.id}}</td>
                </tr>        
        {% endfor %}
            </tbody>  
        </table>
     </div>

{% endblock %}