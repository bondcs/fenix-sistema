     <script type="text/javascript" language="javascript" src="{{ asset('bundles/fnxadmin/js/jquery.form.js') }}"></script>

{% endblock %}
     
{% block menuContent %}

    <div id="menuContent">
        <h3>Gerenciamento: Escala de Funcionários</h3>
        <ul>
            <li><a class="back-link" href="{{ path('funcionarioHome')}}"><span></span>Voltar</a></li>
        </ul> 
    </div>

{% endblock %}

{% block subMenu %} 
<div id="subMenu">
    <ul>
        <li><a href="{{ path("funcionarioHome")}}">Funcionários</a></li>
    </ul>
</div>
{% endblock %}

{% block conteudo %}
     <div>
       <div class="box-filter">
           <form novalidate="novalidate" class="filter" method="POST" action="">
            {{form_errors(formFilter)}}
            {#<input id="habilitarEscala" name="habilitar" style="margin-right: 2px;" type="checkbox" value="h">
            <div class='datepicker bold'>
                   {{ form_errors(formFilter.inicioTime)}}
                   {{ form_label(formFilter.inicioTime)}}    
                   {{ form_widget(formFilter.inicioTime,{'attr' : {'class' : 'inicio', 'disabled' : 'disabled'}})}}
            </div>

            <div class='datepicker bold'>
                   {{ form_errors(formFilter.fimTime)}}
                   {{ form_label(formFilter.fimTime)}}    
                   {{ form_widget(formFilter.fimTime,{'attr' : {'class' : 'fim', 'disabled' : 'disabled' }})}}
            </div> #}
