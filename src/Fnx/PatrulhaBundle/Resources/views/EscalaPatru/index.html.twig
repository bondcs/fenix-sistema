{% extends "FnxAdminBundle::layout.html.twig" %}
{% block title %} Patrulhamento {% endblock %}

{% block javascripts %}
     {{ parent() }}
     <script type="text/javascript" language="javascript" src="{{ asset('bundles/fnxadmin/table/tools/js/TableTools.min.js') }}"></script>
     <script type="text/javascript" language="javascript" src="{{ asset('bundles/fnxadmin/table/tools/js/fnReloadAjax.js') }}"></script>
     <script type="text/javascript" language="javascript" src="{{ asset('bundles/fnxadmin/js/tables/tableEscalaFun.js') }}"></script>
     <script type="text/javascript" language="javascript" src="{{ asset('bundles/fnxadmin/js/tables/tableTurno.js') }}"></script>
     <script type="text/javascript" language="javascript" src="{{ asset('bundles/fnxadmin/js/timepicker.js') }}"></script>
     <script type="text/javascript" language="javascript" src="{{ asset('bundles/fnxadmin/js/jquery.form.js') }}"></script>

{% endblock %}
     
{% block menuContent %}

    <div id="menuContent">
        <h3>Gerenciamento: Patrulhamento</h3>
        <ul>
            <li><a class="back-link" href="{{ path('funcionarioHome')}}"><span></span>Voltar</a></li>
        </ul> 
    </div>

{% endblock %}

{% block subMenu %} 
<div id="subMenu">
    <ul>
        <li><a href="{{ path("funcionarioHome")}}">Funcionários</a></li>
    </ul>
</div>
{% endblock %}

{% block conteudo %}
<div class="tabs">
    <ul>
        <li><a href="#tabs-1">Escalas</a></li>
        <li><a href="#tabs-2">Locais</a></li>
    </ul>
    <div id="tabs-1" style="padding: 0px;">
      <div>
       <div class="box-filter">
           <form novalidate="novalidate" class="filter" method="POST" action="">
            {{form_errors(formFilter)}}    
            <div class='bold picker'>
                   {{ form_errors(formFilter.data)}}
                   {{ form_label(formFilter.data)}}    
                   {{ form_widget(formFilter.data,{'attr' : {'class' : 'data', 'style' : 'font-size : 0.9em'}})}}
            </div> 
        </form>
       </div> 
       <hr style="margin-bottom:1%">
       <div class="box-table">
            <table class="tableEscalaPatru redraw">
                <thead>
                    <tr>
                        <th rowspan="2" class="left">Nome</th>
                        
                        <th colspan="2" class="ui-state-default">Escala</th>
                        <th rowspan="2"> </th>
                        <th rowspan="2">id</th>
                    </tr>
                    <tr>
                        <th>Descrição</th>
                        <th style="width: 24%;">Turno</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>  
            </table>
         </div>
        </div> 
     </div>
        
     <div id="tabs-2">
     
        <div class="box-table">
                <table class="tablePlugin">
                    <thead>
                        <tr>
                            <th>Atividade</th>
                            <th>Nome</th>
                            <th>Cidade</th>
                            <th>Bairro</th>
                            <th>Rua</th>
                            <th>Número</th>
                            <th>Complemento</th>
                            <th class="hide">id</th>
                         </tr>
                     </thead>
                     <tbody>
                         {% for entity in entities %}
                            <tr>
                                <td><a class="link-name" href="{{path("atividadeShow", {"id" : entity.atividade.id})}}">{{entity.atividade.nome}}</a></td>
                                <td>{{entity.descricao }}</td>
                                <td>{{entity.cidade.nome }} </td>
                                <td>{{entity.bairro}}</td>
                                <td>{{entity.rua}}</td>
                                <td>{{entity.numero}}</td>
                                <td>{{entity.complemento}}</td>
                                <td class="id">{{ entity.id }}</td>
                            </tr>
                        {% endfor %}
                     </tbody>
               </table>
        </div>
     </div>

     </div>
</div>
      
{% endblock %}
